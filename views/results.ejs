<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>LDM result</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

    <style>
        body{
            background-color: #e9efff;
        }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark">
      <div class="container-fluid" style="width: auto; display: block;">
        <div class="d-flex align-items-center">
          <img src="/images/logo.jpeg" alt="" class="rounded" width="40px" height="40px">
          <h1 class="navbar-brand text-white" style="font-size: 30px; text-align: center; text-transform: uppercase;">Lawrence Demonstration School</h1>
        </div>
        <p class="text-white" style="text-align: center;text-transform:uppercase;">(Junior High School Department)</p>
        <p class="text-white" style="text-align: center;text-transform:uppercase;">Result for <%=mockName%></p>
      </div>
    </nav>
    <div class="row d-flex justify-content-center pt-5 ps-5 px-5">
      <table class="table table-bordered" id="makepdf">
        <thead>
          <tr>
            <th scope="col">POS</th>
              <th scope="col">NAME</th>
              <th scope="col">ENG</th>
              <th scope="col">SOC</th>
              <th scope="col">MATH</th>
              <th scope="col">SCI</th>
              <th scope="col">RME</th>
              <th scope="col">ICT</th>
              <th scope="col">TWI</th>
              <th scope="col">FRE</th>
              <th scope="col">BDT</th>
              <th scope="col">AGG</th>
              <th scope="col" style="font-style: italic;">Remark</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach((item)=>{ %>
          <tr>
              <th><%= item.position %></th>
              <td><%= item.name %></td>
              <td><%= item.English %></td>
              <td><%= item.Social %></td>
              <td><%= item.Maths %></td>
              <td><%= item.Science %></td>
              <td><%= item.RME %></td>
              <td><%= item.ICT %></td>
              <td><%= item.TWI %></td>
              <td><%= item.French %></td>
              <td><%= item.BDT %></td>
              <td><%= item.aggregate %></td>
              <% if(item.remarks === "Distinction") {%>
                <td style="color: gold; font-family: 'Times New Roman', Times, serif;"><%= item.remarks %></td>
                
                <%}else if(item.remarks === "Highest"){%>
                  <td style="color: green; font-family: 'Times New Roman', Times, serif;"><%= item.remarks %></td>
                
                <%}else if(item.remarks === "Higher"){%>
                  <td style="color: magenta; font-family: 'Times New Roman', Times, serif;"><%= item.remarks %></td>
                
                <%}else if(item.remarks === "High"){%>
                  <td style="color: rgb(17, 0, 255); font-family: 'Times New Roman', Times, serif;"><%= item.remarks %></td>
                
                <%}else if(item.remarks === "High Average"){%>
                  <td style="color: orange; font-family: 'Times New Roman', Times, serif;"><%= item.remarks %></td>
                
                <%}else if(item.remarks === "Average"){%>
                  <td style="color: purple; font-family: 'Times New Roman', Times, serif;"><%= item.remarks %></td>
                
                <%}else if(item.remarks === "Low Average"){%>
                  <td style="color: rgb(16, 224, 197); font-family: 'Times New Roman', Times, serif;"><%= item.remarks %></td>

                <%}else if(item.remarks === "Low"){%>
                  <td style="color: rgb(128, 0, 90); font-family: 'Times New Roman', Times, serif;"><%= item.remarks %></td>
                
                <%}else if(item.remarks === "Lower"){%>
                  <td style="color:deeppink; font-family: 'Times New Roman', Times, serif;"><%= item.remarks %></td>
                
                <%}else{%>
                  <td style="color: red; font-family: 'Times New Roman', Times, serif;"><%= item.remarks %></td>
                  <%}%>
              
              
            </tr>
            <% }) %>
        </tbody>
      </table>
      <div class="d-flex justify-content-end mx-5" style="margin-top: 100px;">
        <button class="p-2"  onclick="window.print()">Print</button>
      </div>
    </div>
    
      
<script>
    var button = document.getElementById("button");
    var makepdf = document.getElementById("makepdf");
  
    button.addEventListener("click", function () {
        var mywindow = window.open("", "PRINT", 
                "height=400,width=600");
  
        mywindow.document.write(makepdf.innerHTML);
  
        mywindow.document.close();
        mywindow.focus();
  
        mywindow.print();
        mywindow.close();
  
        return true;
    });
</script>
<script src=
"https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.js">
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>